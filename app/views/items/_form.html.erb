<%= form_for [current_user, @item] do |f| %>

  <% if @item.errors.any? %>
    <div id="error_message">
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <p>
      title: <br><%= f.text_field :title %>
    </p>
    <p>
      description: <br><%= f.text_area :description %>
    </p>
    <p>
      completed: <br><%= f.check_box :completed %>
    </p>
    <p>
      completed date: <br><%= f.date_field :date_completed %>
    </p>
    <p>
      <%= f.submit "Submit" %>
    </p>
  </div>
<% end %>
